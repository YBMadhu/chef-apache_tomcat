# setenv.sh
#
# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overwritten.
#
<% if @additional %>
  <% @additional.each do |item| %>
<%= item %>
  <% end %>
<% end %>
<% if @catalina_out_dir %>
CATALINA_OUT="<%= @catalina_out_dir %>/catalina.out"
<% end %>
<% if @java_home %>
JAVA_HOME="<%= @java_home %>"
<% end %>
<% if @java_opts && @java_opts.is_a?(Array) %>
JAVA_OPTS="<%= @java_opts.join(' ') %>"
<% elsif @java_opts %>
JAVA_OPTS="<%= @java_opts %>"
<% end %>
<% if @catalina_opts && @catalina_opts.is_a?(Array) %>
CATALINA_OPTS="<%= @catalina_opts.join(' ') %>"
<% elsif @catalina_opts %>
CATALINA_OPTS="<%= @catalina_opts %>"
<% end %>
